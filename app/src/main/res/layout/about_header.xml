<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/about_header"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/library_card_top_bottom_margin"
                android:layout_marginLeft="@dimen/library_card_side_margin"
                android:layout_marginRight="@dimen/library_card_side_margin"
                android:layout_marginTop="@dimen/library_card_top_bottom_margin">

    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="@dimen/about_icon_size"
        android:layout_height="@dimen/about_icon_size"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon"
        />

    <TextView
        android:id="@+id/about_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/about"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/library_text_large"/>

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/library_text_small"
        />

    <TextView
        android:id="@+id/about_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/library_card_top_bottom_margin"
        android:gravity="center"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/library_text_small"/>
    
    <TextView
        android:id="@+id/about_used_libraries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_description"
        android:layout_marginTop="@dimen/library_card_top_bottom_margin"
        android:text="@string/about_used_libraries"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/library_text_large"/>

</RelativeLayout>