<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading_online_tournaments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/main_tick"
            android:paddingTop="@dimen/main_tick"
            android:text="@string/heading_online_tournaments"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_tick"
            android:background="@color/colorAccent"
            android:paddingBottom="@dimen/main_tick"
            android:paddingTop="@dimen/main_tick" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/row_header_online_tournament"
                layout="@layout/row_header_online_tournament" />
        </FrameLayout>

        <TextView
            android:id="@+id/offline_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/main_tick"
            android:text="@string/offline_text"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/no_online_tournaments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/main_tick"
            android:text="@string/no_online_tournaments_found"
            android:textStyle="bold"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/main_tick"
            android:paddingTop="@dimen/main_tick" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/online_tournament_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_line_tick"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/heading_local_tournaments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/main_tick"
            android:paddingTop="@dimen/main_tick"
            android:text="@string/heading_organized_tournaments"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_tick"
            android:background="@color/colorAccent"
            android:paddingBottom="@dimen/main_tick"
            android:paddingTop="@dimen/main_tick" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/row_header_organised_tournament"
                layout="@layout/row_header_organised_tournament" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/local_tournament_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>
</ScrollView>