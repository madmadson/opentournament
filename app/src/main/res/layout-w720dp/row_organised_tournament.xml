<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_item_height"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_tournament"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_item_height_content"
        android:paddingTop="@dimen/main_tick">

        <ImageButton
            android:id="@+id/button_edit_tournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/main_tick"
            android:tint="@color/colorPrimaryDark"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_build_black_36dp" />

        <ImageButton
            android:id="@+id/button_upload_tournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/halve_tick"
            android:layout_toRightOf="@id/button_edit_tournament"
            android:tint="@color/colorPrimaryDark"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_cloud_upload_black_36dp" />

        <TextView
            android:id="@+id/tournament_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/organised_tournament_name_margin_left" />

        <TextView
            android:id="@+id/tournament_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/organised_tournament_date_margin_left" />

        <TextView
            android:id="@+id/tournament_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/organised_tournament_location_margin_left" />

        <TextView
            android:id="@+id/tournament_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/library_text_large"
            android:layout_marginLeft="@dimen/organised_tournament_state_margin_left" />
        

        <TextView
            android:id="@+id/amount_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/main_tick" />
        
        <ImageView
            android:id="@+id/team_tournament_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="@dimen/halve_tick"
            android:layout_marginRight="@dimen/halve_tick"
            android:layout_toLeftOf="@id/amount_players"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_people_black_24dp"
            android:visibility="gone"/>
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_tick"
        android:background="@color/colorDivider"
        android:paddingBottom="@dimen/main_tick"
        android:paddingTop="@dimen/main_tick" />
</LinearLayout>