<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/halve_tick"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
     
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_add_tournament_player_firstname_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_add_tournament_player_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_firstname"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"

            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_add_tournament_player_nickname_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_add_tournament_player_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_nickname"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"

            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_add_tournament_player_lastname_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_add_tournament_player_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_lastname"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"

            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>
    

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_teamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/halve_tick"
            android:paddingTop="@dimen/halve_tick"
            android:paddingBottom="@dimen/halve_tick"
            android:textStyle="bold"
            android:text="@string/team_name"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <Spinner
            android:id="@+id/teamname_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_teamname"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="@dimen/halve_tick"
            android:hint="@string/label_teamname" />

        <TextView
            android:id="@+id/team_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="55dp"
            android:paddingTop="@dimen/halve_tick"
            android:paddingBottom="@dimen/halve_tick"
            android:layout_alignParentRight="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <ImageButton
            android:id="@+id/dialog_add_tournament_player_add_new_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="@string/label_add_teamname"
            android:src="@drawable/ic_add_black_24dp" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_faction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="@dimen/halve_tick"
            android:paddingTop="@dimen/halve_tick"
            android:text="@string/faction"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <Spinner
            android:id="@+id/dialog_add_tournament_player_faction_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="86dp"
            android:layout_marginRight="55dp"
            android:hint="@string/label_faction"
            android:paddingTop="10dp" />

    </RelativeLayout>

</LinearLayout>