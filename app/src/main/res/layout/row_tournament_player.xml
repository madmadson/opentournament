<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/tournament_player_row_card_view"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="@dimen/player_card_side_margin"
    android:layout_marginRight="@dimen/player_card_side_margin"
    android:layout_marginBottom="@dimen/player_card_top_bottom_margin"
    android:layout_marginTop="@dimen/player_card_top_bottom_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tournament_player_row_player_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"/>
        
        <RelativeLayout
       
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     
            android:padding="@dimen/player_card_padding">
    
           
            <TextView
                android:id="@+id/tournament_player_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tournament_player_teamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tournament_player_fullname"
                android:text="testishafdoihsaofhsaodhodah"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tournament_player_row_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="test2"/>

        <ImageView
            android:id="@+id/tournament_player_row_online_icon"
            android:src="@drawable/ic_cloud_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>

