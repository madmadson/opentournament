<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/main_tick">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expandable_army_list_list_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorAlmostBlack"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/expandable_army_list_list_header_not_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_tick"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/expandable_army_list_list_header_text"
            android:src="@drawable/ic_cloud_off_black_24dp" />

        <ImageView
            android:id="@+id/expandable_army_list_list_header_upload_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_tick"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cloud_done_black_24dp"
            android:layout_toRightOf="@id/expandable_army_list_list_header_text"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/expandable_army_list_list_header_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/main_tick"
            android:src="@android:drawable/ic_delete" 
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>